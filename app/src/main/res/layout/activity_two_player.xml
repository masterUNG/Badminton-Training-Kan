<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kbu.sineepun.kanpengnet.badmintontraining.TwoPlayer">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button3"
        android:background="@drawable/bg_score_01">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/imageView19"
            android:layout_marginBottom="100dp"
            android:background="#82000000">

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:hint="Player A"
                android:gravity="center_horizontal"
                android:textColorHint="@color/text"
                android:textColor="@color/text" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView19"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:background="#82000000"
            android:layout_below="@+id/imageView19"
            android:layout_marginTop="100dp">

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:hint="Player B"
                android:gravity="center_horizontal"
                android:textColorHint="@color/text"
                android:textColor="@color/text" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
